mixin productForm(product = {})
  form(action=`/add/${product._id || ''}` method="POST" class="card")
    label(for="name") Article Name 
    input(type="text" name="name" value=product.name)
    label(for="price") Price $
    input(type="number" name="price" value=product.price)
    label(for="description") Description
    textarea(name="description")= product.description
    - const choices = ['Technology', 'Clothes','Books', 'Furniture', 'Antique', 'Sports','Mobile', 'Toys', 'For kids', 'Outdoors', 'Office', 'Relax']
    - const tags = product.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}
    input(type="submit" value="Save â†’" class="button")
