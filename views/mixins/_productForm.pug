mixin productForm(product = {})
  form(action="/add" method="POST" class="card")
    label(for="name") Article Name 
    input(type="text" name="name")
    label(for="description") Description
    textarea(name="description")
    - const choices = ['Technology', 'Clothes','Books', 'Furniture', 'Antique', 'Sports','Mobile', 'Toys']
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags")
          label(for=choice) #{choice}
    input(type="submit" value="Save â†’" class="button")
